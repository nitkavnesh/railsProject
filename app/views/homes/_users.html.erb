                    <a class="lazyImage" href="/assets/category-landing3.jpg"></a>
                    <a class="lazyImage " href="/assets/celebrations.jpg"></a>
                    <a class="lazyImage" href="/assets/ethnic-fest.jpg"></a>
                    <a class="lazyImage " href="/assets/gear-up.jpg"></a>
                    <a class="lazyImage" href="/assets/holiday-shopping.jpg"></a>
                    <a class="lazyImage " href="/assets/ipad.jpg"></a>
                    <a class="lazyImage " href="/assets/men-shoes1.jpg"></a>
                    <a class="lazyImage" href="/assets/men-shoes2.jpg"></a>
                    <a class="lazyImage " href="/assets/men-sunglasses.jpg"></a>
                    <a class="lazyImage" href="/assets/men-winterwear.jpg"></a>
                    <a class="lazyImage " href="/assets/music-instruments.jpg"></a>
                    <a class="lazyImage " href="/assets/saree.jpg"></a>
                    <a class="lazyImage " href="/assets/women-shoes1.jpg"></a>
                    <a class="lazyImage " href="/assets/women-shoes2.jpg"></a>
                    <a class="lazyImage " href="/assets/women-sunglasses.jpg"></a>
                    <a class="lazyImage " href="/assets/women-winterwear.jpg"></a>
                </div>
            </div>
		</div>
		<div class="col-md-4" style="margin-top: 13px;">
			<a href="#">
				<img id="iCartLogo" style="height: 350px;" src="/assets/nexus5.jpg" class="img-responsive" alt="Responsive image" />
			</a>
		</div>
	</div>


	<div class="row">
		<div class="col-md-8" style="margin-top: 13px;">
      <% @categories.each do |category| %>
        <% if category.parent_id==nil %>
			   	<div class="" style="background-color: #424242; height: 40px;">
					  <h2 class="header" style="background-color: #424242; height: 38px;">
						  <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;"><%= category.name %></span>
						  <span style="font-size: 14px; color: #ffffff; margin-right: 10px; float: right; margin-top: 12px;">India's leading electronics megastore</span>
						</h2>
					</div>

					<div class="cls" style="background-color: #ffffff; height: 180px; margin-top: 20px;">
						<div id="NAV-ID" class="crsl-nav">
							<a href="#" class="previous">Previous</a>
							<a href="#" class="next">Next</a>
						</div>

					<div class="crsl-items" data-navigation="NAV-ID">
						<div class="crsl-wrap">
					  	<% @categories.each do |category2| %>
					  		<% if category2.parent_id==category.id %>
					  			<figure class="crsl-item fltLeft">
										<a class="fltLeft" href="subcategory/<%= category2.name %>" >
											<div class="fltLeft">
												<img class="imageSize" src="<%= category2.image %>">
											</div>
										</a>
									</figure>
								<% end %>
							<% end %>
						</div>
					</div>

					</div>
			<% end%>
			<%end %>

			</div>

			<div class="col-md-4" style="margin-top: 13px;">
			
				
			</div>
	</div>
</div>