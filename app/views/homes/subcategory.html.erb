<div class="container" style="margin-top: 70px;">
	
	<div class="row">
		<div class="col-md-3" style="margin-top: 13px;">
			<div class="nav-section first-section">
				<div class="nav-section-title" style="font-size: 16px; font-weight: bold; text-transform: uppercase;">
					<span><%= @cat_name %> brands</span>
				</div>
				<div class="nav-section-cat-list">
			  	<% @categories2.each do |category| %>
							<a class="hov-col cont nav-section-item tpadding5 bpadding5 " href="/category_product/<%= category.name %>"  style="display: block; ">
								<%= category.name %>
							</a>
					<% end %>
				</div>
			</div>

		</div>
		
		<div class="col-md-9" style="margin-top: 13px;">
			<h1 class="header" style="text-transform: uppercase; font-size: 28px; font-weight: bold; margin-left: 10px; color: #848484">
				<%= @cat_name %>
			</h1>
			<hr class="sub">
			<div class="">
				<ul class="ulBullet" style="margin-left:10px; margin-top:5px;">
				<% @categories2.each do |category| %>	
					<% @products=Product.where(:category_id=>category.id) %>
						<% @products.each do |product| %>
								<li class="fltLeft" style="width: 200px; height: 320px; margin-left: 2px; margin-bottom:10px;">
									<a class="fltLeft pr-hov-col" href="/product_info/<%= product.name %>" data-tracking-id="">
										<div class="fltLeft">
											<img class="pr-image-size" src="<%= product.image %>" style="margin-left:7px;">
										</div>
										<div class="pr-title" style="font-size: 13px;">
											<span style="margin-top:5px;"><%= product.name %></span>
										</div>

										<div class="pr-border-top">
											<span style="font-size:17px;">
												<%= product.price %>
											</span>
										</div>
										<div class="pr-border-top" style="font-size: 13px;">
											<span class="pr-desc">
												<%= product.description %>
											</span>
										</div>
									</a>
								</li>
						<% end %>
				<% end %>
				</ul>
			</div>

		</div>
	</div>
</div>