<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <div class="" style="background-color: #424242; height: 40px; margin-top: 20px;">
        <h2 class="header" style="background-color: #424242; height: 38px;">
          <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;">Listing Product</span>
          <span style="font-size: 14px; color: #ffffff; margin-right: 10px; float: right; margin-top: 12px;">Admin will show the product details</span>
        </h2>
      </div>
      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= Category.find(product.category_id).name %></td>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <td><%= product.image %></td>
              <td><%= link_to 'Show', product, :class=>"mrg_left" %></td>
              <td><%= link_to 'Edit', edit_product_path(product), :class=>"mrg_left" %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mrg_left" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

