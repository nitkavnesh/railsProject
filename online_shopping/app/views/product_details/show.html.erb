<% if user_signed_in?  && current_user.role_id== 1 %>
<div class="container" style="margin-top: 75px;">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<p id="notice"><%= notice %></p>
			<p>
			  <strong>Product:</strong>
			  <%= Product.find(@product_detail.product_id).name %>
			</p>

			<p>
			  <strong>Unique Identity:</strong>
			  <%= @product_detail.unique_id %>
			</p>

			<p>
			  <strong>Availability:</strong>
			  <%= @product_detail.available %>
			</p>


			<%= link_to 'Edit', edit_product_detail_path(@product_detail) %> |
			<%= link_to 'Back', product_details_path %>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
<%end%>